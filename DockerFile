FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    g++ \
    libcurl4-openssl-dev \
    ca-certificates \
    && update-ca-certificates

WORKDIR /app

COPY backend/ ./backend/

WORKDIR /app/build

RUN cmake ../backend && make

CMD ["./backend"]
